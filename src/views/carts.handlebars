<div id="contenido">
    <div class="go_to_home">
        <span class="total">{{quantityTotal}} Productos - Total: U$D {{amountTotal}}</span><a href="http://localhost:8080/products"><button type="button" class="btn btn-warning">Seguir Comprando</button></a>
    </div>
    {{#each productsOnCart}}
    <div class="card" style="width: 18rem;">
        <div class="image-container">
            <img src="{{this.productId.thumbnail}}" class="card-img-top" alt="...">
        </div>
        <div class="card-body">
            <h5 class="card-title">{{this.productId.title}}</h5>
            {{this.productId.category}}
            <h6>U$D: {{this.productId.price}}</h6>
            <p class="card-text">{{this.productId.description}}</p>
        </div>
        <div class="purchase_quantity">
            En carrito:
            <button type="button" class="btn btn-warning" title="Eliminar un producto" id="subtract" data-productid="{{this.productId._id}}"
                current-quantity="{{this.quantity}}" data-cartid="{{../cid}}">-</button>
            <span>{{this.quantity}}</span>
            <button type="button" class="btn btn-warning" title="Agregar un producto" id="add" data-productid="{{this.productId._id}}"
                current-quantity="{{this.quantity}}" data-cartid="{{../cid}}">+</button>
            <button type="button" class="btn-delete" title="Eliminar Producto" data-productid="{{this.productId._id}}" data-cartid="{{../cid}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash"
                    viewBox="0 0 16 16">
                    <path
                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                    <path
                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                </svg></button>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Code: {{this.productId.code}}</li>
            <li class="list-group-item">ID: {{this.productId._id}}</li>
        </ul>
    </div>
    {{/each}}
</div>
{{#if productsOnCart}}
<div class="purchase">
<button type="button" id="purchase-button" class="btn btn-warning" data-total="{{amountTotal}}" data-cart="{{../cid}}">Finalizar Compra</button>
</div>
{{/if}}


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/cart.js"></script>