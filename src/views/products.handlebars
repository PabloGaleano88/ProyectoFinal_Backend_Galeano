<div id="contenido">
    <div class="user_data">
        <div class="user_logged_left">
            <span>Bienvenid@! {{first_name}} {{last_name}} ({{age}})
        </div>
        <div class="user_logged_right">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                <path fill-rule="evenodd"
                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                <span>
                    {{email}} |
                    {{#if admin}}
                    Administrador
                    {{else if premium}}
                    Premium
                    {{else}}
                    Usuario
                    {{/if}} |
                    <a href="http://localhost:8080/api/logout">Cerrar Sesi√≥n </a>
                </span>
            </svg>
        </div>
    </div>
    {{#if admin}}
    <div class="admin_products">
        <a href="http://localhost:8080/realtimeproducts"><button type="button" class="btn btn-warning">Administrar
                Productos</button></a>
    </div>
        <div class="adm_users">
        <a href="http://localhost:8080/adminusers"><button type="button" class="btn btn-warning">Adm. Usuarios</button></a>
    </div>
    {{else if premium}}
    <div class="admin_products">
        <a href="http://localhost:8080/realtimeproducts"><button type="button" class="btn btn-warning">Administrar
                Productos</button></a>
    </div>
    <div class="go_to_chat_premium">
        <a href="http://localhost:8080/chat"><button type="button" class="btn btn-warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat"
                    viewBox="0 0 16 16">
                    <path
                        d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
                </svg>Chat</button>
        </a>
    </div>
    <div class="go_to_cart">
        <a href="http://localhost:8080/carts/{{cartId}}"><button type="button" class="btn btn-warning">Ir
                a mi carrito</button></a>
    </div>
    {{else}}
    <div class="go_to_chat">
        <a href="http://localhost:8080/chat"><button type="button" class="btn btn-warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat"
                    viewBox="0 0 16 16">
                    <path
                        d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
                </svg>Chat</button>
        </a>
    </div>
    <div class="go_to_cart">
        <a href="http://localhost:8080/carts/{{cartId}}"><button type="button" class="btn btn-warning">Ir
                a mi carrito</button></a>
    </div>
    {{/if}}
    {{#each products}}
    <div class="card" style="width: 18rem;">
        <div class="image-container">
            <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
        </div>
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            {{this.category}}
            <h6>U$D: {{this.price}}</h6>
            <p class="card-text">{{this.description}}</p>
        </div>
        {{#if ../admin}}
        {{else}}
        <div class="purchase_botton">
            <button type="button" class="btn btn-warning" id="purchase" data-productid="{{this._id}}"
                data-cartid="{{../cartId}}">Add to Cart +</button>
        </div>
        {{/if}}
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Stock: {{this.stock}} - Status: {{this.status}} </li>
            <li class="list-group-item">Code: {{this.code}}</li>
            <li class="list-group-item">ID: {{this._id}}</li>
        </ul>
    </div>
    {{/each}}
</div>
<footer>
    <div class="nav_buttons">
        {{#if prevLink}}
        <a href="{{prevLink}}"><button type="button" class="btn btn-warning">Pagina Anterior</button></a>
        {{/if}}
        {{#if nextLink}}
        <a href="{{nextLink}}"><button type="button" class="btn btn-warning">Pagina Siguiente</button></a>
        {{/if}}
    </div>
</footer>
<script>
    const userData = {
        first_name: "{{first_name}}",
        last_name: "{{last_name}}",
        email: "{{email}}",
        age: "{{age}}"
    }
</script>
